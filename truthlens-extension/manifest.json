{
  "manifest_version": 3,
  "name": "ForReal",
  "version": "1.0.0",
  "description": "Real-time fact-checking for X (Twitter) posts",
  "permissions": [
    "activeTab",
    "scripting",
    "contextMenus"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/config/constants.js",
        "src/utils/dom-utils.js",
        "src/utils/tweet-utils.js",
        "src/utils/api-client.js",
        "src/services/tts-service.js",
        "src/services/fact-check-service.js",
        "src/components/media-checker.js",
        "src/components/overlay.js",
        "src/components/fact-check-button.js",
        "src/components/floating-button.js",
        "src/services/injection-service.js",
        "src/content.js"
      ],
      "css": [
        "src/styles/main.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/forreal-16.png",
    "48": "icons/forreal-48.png",
    "128": "icons/forreal-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/forreal-16.png",
      "48": "icons/forreal-48.png",
      "128": "icons/forreal-128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/ForReal-logo-long.jpg",
        "icons/ForReal-logo-long-blue-cropped.jpg"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}